<% provide(:title, @user.name) %>
<div class="row">
  <aside class ="col-md-4" >
    <section class = "user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    <% if current_user?(@user) %>
       <div class="col-md-8">
          <h3>Micropost Feed</h3>
        </div>
    <% end %>
  </aside>
  <div class="col-md-8">
  <% if @user.microposts.any? %>
    <h3>Microposts (<%= @user.microposts.count %>)</h3>
    <ol class="microposts">
      <%= render @microposts %>
    </ol>
    <%= will_paginate @microposts %>
  <% end %>
</div>

</div>
